{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths": {
      "@/*": ["./tests/*"]
    }
  },
  "compileOnSave": true,
  "include": ["tests"],
  "exclude": ["node_modules"]
}
