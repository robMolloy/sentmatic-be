{
  "name": "functions",
  "scripts": {
    "firebase:init": "node_modules/.bin/firebase init",
    "functions:build": "node_modules/.bin/tsc --watch",
    "firebase:emulator": "node_modules/.bin/firebase emulators:start --project demo-project --only auth,firestore,functions,storage",
    "test:watch": "jest --watchAll --detectOpenHandles",
    "dev1": "npm run functions:build",
    "dev2": "npm run firebase:emulator",
    "dev3": "npm run test:watch"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.3.1",
    "stripe": "^17.5.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^4.0.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.4.0",
    "firebase-tools": "^13.30.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^4.9.0"
  },
  "private": true
}
